<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login_page"
    android:padding="8dp">

    <TextView
        android:id="@+id/mediaplayer_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Music Title"
        android:gravity="center_horizontal"
        android:textSize="26sp"
        android:textColor="#51697A"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="75dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/image_play"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="75dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/mediaplayer_time_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="00:00"
            android:textColor="@color/black"/>

        <SeekBar
            android:id="@+id/seektime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/background_seekbar"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:id="@+id/mediaplayer_time_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="0:00"
            android:textColor="@color/black"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageButton
            android:id="@+id/prev_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_previous"/>
        <ImageButton
            android:id="@+id/play_pause_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_play"/>
        <ImageButton
            android:id="@+id/next_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_next"/>

    </LinearLayout>

</LinearLayout>